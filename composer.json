{
    "name": "jdorn/php-reports",
    "description": "A PHP framework for displaying reports from any data source, including SQL and MongoDB",
    "homepage": "http://jdorn.github.com/php-reports/",
    "keywords": ["reports", "mongodb", "sql", "reporting", "csv", "database"],
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Jeremy Dorn",
            "email": "jeremy@jeremydorn.com"
        }
    ],
    "require": {
        "php": ">=5.3",
        "mikecao/flight": "dev-master",
        "lespoilus/spyc": "dev-master"
    },
    "suggest": {
        "ext-pdo": "when using pdo",
        "twig/twig": "when using twig",
        "swiftmailer/swiftmailer": "when using mail",
        "jdorn/sql-formatter": "when using sql",
        "jdorn/file-system-cache": "when using caching? problem with composer autoloading!",
        "phpoffice/phpexcel": "when using excel",
        "adodb/adodb-php": "when using adodb",
        "google/apiclient": "when using google charts",
        "alcaeus/mongo-php-adapter": "when using mongodb"
    },
    "autoload": {
        "files": [
            "lib/adodb/pivottable.inc.php"
        ]
    },
    "minimum-stability": "dev"
}
